<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Home</title>
</head>
<body>
    <div class="container">
        <h1>Blog Website</h1>
        <a href="/compose" class="compose-link">Compose New Post</a>
        <% posts.forEach(post => { %>
            <div class="post-preview">
                <h2><a href="/posts/<%= post._id %>"><%= post.title %></a></h2>
                <p><%= post.content.substring(0, 100) %>...</p>
                <div class="post-actions">
                    <a href="/edit/<%= post._id %>" class="edit-button">Edit</a>
                    <a href="/delete/<%= post._id %>" class="delete-button">Delete</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
